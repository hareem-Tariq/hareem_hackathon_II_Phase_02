# ============================================
# Frontend Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values

# API Configuration
# In development: http://localhost:8000
# In production: https://your-backend.herokuapp.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# Better Auth Configuration
# MUST match JWT_SECRET from backend!
BETTER_AUTH_SECRET=your-secure-random-secret-min-32-characters-here

# Better Auth Base URL
# In development: http://localhost:3000
# In production: https://your-app.vercel.app
BETTER_AUTH_URL=http://localhost:3000

# Database Configuration (same as backend)
# Get this from: https://console.neon.tech/
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/your-database?sslmode=require
