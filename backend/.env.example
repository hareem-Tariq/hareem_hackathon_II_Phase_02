# ============================================
# Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values

# Database Configuration (Neon PostgreSQL)
# Get this from: https://console.neon.tech/
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/your-database?sslmode=require

# JWT Configuration
# Generate a secure random string (minimum 32 characters)
# You can use: openssl rand -hex 32
JWT_SECRET=your-secure-random-secret-min-32-characters-here

# CORS Configuration
# In development: http://localhost:3000
# In production: https://your-app.vercel.app
CORS_ORIGIN=http://localhost:3000

# JWT Settings (optional - defaults provided)
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=1
